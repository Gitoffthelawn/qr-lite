{
  "manifest_version": 2,
  "name": "QR Lite",
  "short_name": "QR Lite",
  "description": "Make QR Codes in Pure JavaScript",
  "version": "1.0",

  "icons": {
    "16": "assets/qrlite_16.png"
  },

  "applications": {
        "gecko": {
            "id": "@qrlite",
            "strict_min_version": "48.0"
        }
    },

  "permissions": [
          "tabs",
          "activeTab",
          "<all_urls>",
          "contextMenus"
    ],

  "browser_action": {
    "default_icon": {
      "19": "assets/qrlite_16.png"
    },
    "default_popup": "data/index.html"
  },

  "content_security_policy": "script-src 'self'; default-src 'self'; img-src * data:; style-src 'self';",

  "background": {
      "scripts": ["background.js"]
  }
}
