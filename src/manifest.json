{
  "manifest_version": 2,
  "name": "QR Lite",
  "short_name": "QR Lite",
  "description": "Make or Scan QR Codes in Pure JavaScript",
  "version": "2.0",

  "icons": {
    "16": "icons/qrlite.svg",
    "48": "icons/qrlite.svg"
  },

  "applications": {
    "gecko": {
      "id": "@qrlite",
      "strict_min_version": "48.0"
    }
  },

  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "contextMenus",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/qrlite.svg",
    "default_popup": "popup/popup.html",
    "theme_icons": [
      {
        "light": "icons/qrlite-gray.svg",
        "dark": "icons/qrlite.svg",
        "size": 16
      },
      {
        "light": "icons/qrlite-gray.svg",
        "dark": "icons/qrlite.svg",
        "size": 32
      }
    ]
  },

  "content_security_policy": "script-src 'self'; default-src 'self'; img-src * data:; style-src 'self';",

  "background": {
    "scripts": ["background/background.js"]
  }
}
