{
  "manifest_version": 2,
  "name": "__MSG_extension_name__",
  "short_name": "__MSG_extension_short_name__",
  "description": "__MSG_extension_description__",
  "version": "2.5",
  "default_locale": "en",
  "icons": {
    "16": "icons/qrlite_16.png",
    "32": "icons/qrlite_32.png",
    "48": "icons/qrlite_48.png",
    "64": "icons/qrlite_64.png",
    "128": "icons/qrlite_128.png",
    "256": "icons/qrlite_256.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "contextMenus",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/qrlite_16.png",
      "48": "icons/qrlite_48.png"
    },
    "default_popup": "popup/popup.html"
  },
  "content_security_policy": "script-src 'self'; default-src 'self'; img-src * data:; style-src 'self';",
  "background": {
    "scripts": [
      "background/background.js"
    ]
  }
}
